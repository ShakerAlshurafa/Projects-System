@using SPCS.ViewModel
@model ApplicationUserCreateVM
@section Title {
Users
}



<div class="card mx-auto w-75 pt-3 pb-4 bg-info">
	<h3 class="text-center">Create User</h3>
	<form asp-controller="Users" asp-action="Create">
		<div class="card-body">
			<div class="form-group">
				<label asp-for="UserName"></label>
				<input type="text" class="form-control" asp-for="UserName" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Email"></label>
				<input type="email" class="form-control" asp-for="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PhoneNumber"></label>
				<input type="tel" class="form-control" asp-for="PhoneNumber" />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address"></label>
				<input type="text" class="form-control" asp-for="Address" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PasswordHash"></label>
				<input type="password" class="form-control" asp-for="PasswordHash" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SelectedRoles"></label>
				<select class="form-control" asp-for="SelectedRoles" asp-items="@Model.Roles"></select>
				<span asp-validation-for="SelectedRoles" class="text-danger"></span>
			</div>
		</div>
		<div class="card-footer text-center mt-2">
			<button type="submit" class="btn btn-primary w-25">Add</button>
		</div>
	</form>
</div>